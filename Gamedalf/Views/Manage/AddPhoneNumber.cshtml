@model Gamedalf.ViewModels.AddPhoneNumberViewModel
@{
    ViewBag.Title = "Phone Number";
    ViewBag.Lead = "Great! Add your phone number so we can get be best friends! *creepy look*";
}

@Html.Partial("_Title")

@using (Html.BeginForm("AddPhoneNumber", "Manage", FormMethod.Post, new { role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Number, new { @class = "control-label" })
            @Html.TextBoxFor(m => m.Number, new { @class = "form-control" })
    </div>

    @Html.Partial("_Confirm", "Add")
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
