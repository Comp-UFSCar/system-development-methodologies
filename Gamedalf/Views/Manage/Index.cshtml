@model IndexViewModel

@using Microsoft.AspNet.Identity;

@{
    ViewBag.Title = "Manage your account, " + User.Identity.GetUserName();
}

@if (!String.IsNullOrEmpty(@ViewBag.StatusMessage))
{
    <p class="alert alert-danger">
        @ViewBag.StatusMessage
    </p>
}

<h2>Password</h2>

<p>
    @if (Model.HasPassword)
    {
        @Html.ActionLink("Change", "ChangePassword")
        @:your password.
    }
    else
    {
        @Html.ActionLink("Create", "SetPassword")
    }
</p>
<hr />

<h2>External Logins</h2>
<p>
    @Html.ActionLink("Manage", "ManageLogins")
    @Model.Logins.Count external login(s).
</p>

@*
    for details on setting up this ASP.NET application to support two-factor authentication using SMS.
    http://go.microsoft.com/fwlink/?LinkId=313242
*@

<hr />

<h2>Phone Number</h2>
<p>
    @if (Model.PhoneNumber != null)
    {
        <span class="glyphicon glyphicon-phone"></span> @Model.PhoneNumber@:&nbsp;

        @Html.ActionLink("Change", "AddPhoneNumber")@:&nbsp;
        @Html.ActionLink("Remove", "RemovePhoneNumber")
    }
    else
    {
        @Html.ActionLink("Add", "AddPhoneNumber")
        @:a phone.
    }

</p>

