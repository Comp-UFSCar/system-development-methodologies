@model GameScoreViewModel

<span class="label label-info"
      title="@Model.Score @Model.Description">
    
    @if (!String.IsNullOrEmpty(Model.Title))
    {
        @Model.Title<span>:</span>

    }
    
    @for (var i = 0; i < Model.Score; i++)
    {
        <span class="glyphicon glyphicon-star"></span>}
</span>
