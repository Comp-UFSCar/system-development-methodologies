@model IEnumerable<Employee>

@Html.Partial("_PagedListPager", Model)

@foreach (var employee in Model)
{
    @Html.Partial("_Profile", employee)
    
    if (User.IsInRole("admin"))
    {
        <div class="col-sm-offset-2">
            @Html.ActionLink("Edit", "Edit", new { id = employee.Id }, new { @class = "btn btn-default" })
            @Html.ActionLink("Delete", "Delete", new { id = employee.Id }, new { @class = "btn btn-danger" })
        </div>
    }
    <br /><br /><br />
}
