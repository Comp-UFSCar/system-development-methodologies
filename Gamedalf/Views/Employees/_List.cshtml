@model IEnumerable<Employee>

@Html.Partial("_PagedListPager", Model)

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-sm-2">
            <center>
                <img src="@Url.Content("~/Images/profile-picure.min.jpg")" alt="Profile picture" class="img-circle img-responsive">
            </center>
        </div>
        <div class="col-sm-10">
            <h1>
                <a href="@Url.Action("Details", new { id = item.Id })">
                    @Html.DisplayFor(modelItem => item.Email)
                </a>
            </h1>
            <p>
                @if (item.EmailConfirmed)
                {
                    <span class="label label-info">Email confirmed</span>
                }
                else
                {
                    <span class="label label-default">Email not confirmed</span>
                }
            </p>
            <p>
                @Html.DisplayFor(modelItem => item.SSN)
            </p>
            @if (!String.IsNullOrEmpty(item.PhoneNumber))
            {
                <p>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                    @if (item.PhoneNumberConfirmed)
                    {
                        <span class="label label-info">Phone number confirmed</span>
                    }
                    else
                    {
                        <span class="label label-default">Phone number not confirmed</span>
                    }
                </p>
            }
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </p>
        </div>
    </div>
    <br /><br /><br />
}
