@model TermsEditViewModel

@{
    ViewBag.Title = "Update " + Model.Title;
}

<h2>
    You will update the "Terms and Conditions" @Model.Title
    <small>
        The updated will be instantially visible through
        the interface <strong>/api/{Terms title}</strong>.
    </small>
</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-12">
                @Html.TextAreaFor(model => model.Content, 20, 10, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    @Html.Partial("_Confirm", "Save")
}
